# Firebase Configuration
FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Firebase Authentication Options (choose one):

# Option 1: Base64 encoded service account JSON (recommended for production)
FIREBASE_SA_BASE64=

# Option 2: Direct path to service account JSON file (for local development)
FIREBASE_SA_PATH=./serviceAccountKey.json

# Option 3: Use Application Default Credentials (no env var needed)

# Daraja Sandbox Configuration
DARAJA_CONSUMER_KEY=your_key_here
DARAJA_CONSUMER_SECRET=your_secret_here
DARAJA_SHORTCODE=600988
DARAJA_TEST_MSISDN=254708374149
DARAJA_CALLBACK_URL=http://localhost:8080/dashboard/daraja/callback

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:8080

# MQTT Configuration
MQTT_BROKER_URL=mqtt://broker.hivemq.com:1883
MQTT_USERNAME=
MQTT_PASSWORD=
# For secure connection use: mqtts://your-broker.com:8883

# IoT Configuration
API_KEY=your-secure-api-key-here
UNITS_PER_KES=0.05

# Example of how to generate FIREBASE_SA_BASE64:
# 1. Download your service account key JSON file from Firebase Console
# 2. Run: cat serviceAccountKey.json | base64 -w 0
# 3. Copy the output and paste it as the value for FIREBASE_SA_BASE64